<%- include('./views/_head', {
	pageName: 'お品書き',
	controller: 'menu'
}) %>

	<ng-include src="viewsNavbar"></ng-include>

	<main class="main-area">

		<div class="container">

			<%- include('./views/_header', {
				bg: 'headerBg',
				pageName: 'pageName'
			}) %>

			<div class="main-content left menu-list">

				<div ng-repeat="cat in menuList">
					<h3>
						<span class="ja">{{cat.ja}}</span>
						<span class="en">{{cat.en}}</span>
					</h3>

					<div ng-repeat="class in cat.list" id="{{class.en}}">
						<h4>
							<span class="ja">{{class.ja}}</span>
							<span class="en">{{class.en}}</span>
						</h4>

						<ul class="menu-items">
							<li ng-repeat="item in class.menu">
								<div class="menu-left" ng-class="{wide: item.image === ''}">
									<h5>{{item.name}}</h5>
									<div class="price">{{item.price | number}}{{item.price === '時価' ? '時価' : '円'}}</div>
									<p ng-bind-html="item.comment"></p>
								</div>
								<div class="menu-right" ng-if="item.image != ''">
									<div class="thumb" ng-style="{'background-image': 'url(/assets/img/menu-img/' + item.image + '.jpg)'}"></div>
								</div>
							</li>
						</ul>

					</div>

				</div>

			</div>

			<div class="sidebar right">

				<div class="menu-tree" id="sidebar">

					<div ng-repeat="cat in menuList">
						<h4><span>{{cat.ja}}</span></h4>
						<ul>
							<li ng-repeat="item in cat.list">
								<a href="#" ng-click="scrollTo(item.en)">{{item.ja}}</a>
							</li>
						</ul>
					</div>

				</div>

			</div>

		</div>

	</main>

	<ng-include src="viewsFooter"></ng-include>

	<% include views/_scripts %>

</body>
</head>